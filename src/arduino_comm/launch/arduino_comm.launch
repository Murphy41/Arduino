<launch>
    <!-- Start the Python node for LED control -->
    <node pkg="arduino_comm" type="arduino_serial.py" name="arduino_comm_node" output="screen" />

    <!-- Start the ROSserial node to communicate with Arduino -->
    <node pkg="rosserial_python" type="serial_node.py" name="rosserial_node">
        <param name="port" value="/dev/ttyACM1"/> <!-- Update with your Arduino's serial port -->
        <param name="baud" value="57600"/>        <!-- Match the baud rate in your Arduino code -->
    </node>
</launch>

